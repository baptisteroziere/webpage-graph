# -*- coding: utf-8 -*-
import scrapy


class WebgraphSpider(scrapy.Spider):
    name = "webgraph"
    allowed_domains = ["http://perso.ens-lyon.fr/baptiste.roziere"]
    start_urls = (
        'http://www.http://perso.ens-lyon.fr/baptiste.roziere/',
    )

    def parse(self, response):
        filename = response.url.split("/")[-2] + '.html'
        with open(filename, 'wb') as f:
            f.write(response.body)
        
